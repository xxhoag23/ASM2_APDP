@model User

@using (Html.BeginForm("Login", "Authentication", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, new { placeholder = "User Name", Class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.PassWord)
        @Html.TextBoxFor(m => m.PassWord, new { placeholder = "Password", Class = "form-control" })
    </div>
    <div style="color:red">
          @ViewBag.error
    </div>

    <br />
   <input type="submit" value="Login" class="btn btn-primary" />
    <a class="btn btn-primary" href="~/Authentication/Register">Register</a>
    
    
}