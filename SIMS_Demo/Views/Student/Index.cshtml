@model List<SIMS_Demo.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<h1>Student</h1>
<a href="@Url.Action("NewStudent")" class="btn btn-primary">Add New Student</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Class</th>
            <th>Actions</th> <!-- Added column for actions -->
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.DoB.ToShortDateString()</td>
                <td>@student.Class</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-secondary">Edit</a> <!-- Edit link -->
                    <form asp-action="Delete" asp-route-id="@student.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?');">Delete</button>
                    </form> <!-- Delete button inside a form -->
                </td>
            </tr>
        }
    </tbody>
</table>
